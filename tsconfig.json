{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["ES2022"],
    //general
    "esModuleInterop": true,
    "moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
    //project config
		"skipLibCheck": true,
		"declaration": true,
		"rootDir": "./src",
		"outDir": "./build/",
    //type strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
  }
}
